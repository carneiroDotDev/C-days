{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "build",
			"command": "dotnet",
			"type": "process",
			"args": [
				"build",
				"${workspaceFolder}/C#days.sln", // Or "${workspaceFolder}/src/HelloWorld/HelloWorld.csproj"
				"/property:GenerateFullPaths=true",
				"/consoleloggerparameters:NoSummary"
			],
			"problemMatcher": "$msCompile",
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"label": "publish",
			"command": "dotnet",
			"type": "process",
			"args": [
				"publish",
				"${workspaceFolder}/C#days.sln", // Or "${workspaceFolder}/src/HelloWorld/HelloWorld.csproj"
				"/property:GenerateFullPaths=true",
				"/consoleloggerparameters:NoSummary"
			],
			"problemMatcher": "$msCompile"
		},
		{
			"label": "watch",
			"command": "dotnet",
			"type": "process",
			"args": [
				"watch",
				"run",
				// "--project",
				// "${workspaceFolder}/src/HelloWorld/HelloWorld.csproj" // Specify the project to watch
			],
			"problemMatcher": "$msCompile",
			"options": {
				"cwd": "${workspaceFolder}" // Set the working directory to the project folder
			}
		}
	]
}